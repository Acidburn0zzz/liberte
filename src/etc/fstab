# Mounted by initramfs:
# /, /mnt{/boot,/live=/,/restrict/rwroot}

# Mounted by init.sh:
# /proc, /run, /lib/rc/init.d

# Mounted by init.d services (before localmount):
# sysfs:      /sys{,/kernel{/security,/debug,/config,/cgroup{,/cpu,...}}}
# udev-mount: /dev
# devfs:      /dev{/pts,/shm}

# Unionfs subdirectories mounted into ro /
unionfs /etc  unionfs dirs=/mnt/rwroot/etc=rw:/mnt/live/etc=ro,nosuid,nodev        0 0
unionfs /var  unionfs dirs=/mnt/rwroot/var=rw:/mnt/live/var=ro,nosuid,nodev,noexec 0 0
unionfs /home unionfs dirs=/mnt/rwroot/home=rw:/mnt/live/home=ro,nosuid,nodev      0 0

# Empty writable directories
tmpfs   /tmp  tmpfs   mode=1777,nosuid,nodev,noexec 0 0
tmpfs   /srv  tmpfs   mode=0755,nosuid,nodev,noexec 0 0

# Mounted by init.d services (after localmount):
# procfs:     /proc/sys/fs/binfmt_misc

# Non-auto mounts used by /etc/init.d/xconfig
/usr/lib/xorg/modules/drivers.vesa         /usr/lib/xorg/modules/drivers             none noauto,bind,ro 0 0
/usr/lib/xorg/modules/drivers/dummy_drv.so /usr/lib/xorg/modules/drivers/vesa_drv.so none noauto,bind,ro 0 0

# Persistence mount is added below by /etc/init.d/liberte
