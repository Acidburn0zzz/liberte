# Silent mode messages
SPLASH_BOOT_MESSAGE="Booting Liberté Linux (\$progress%)"
SPLASH_REBOOT_MESSAGE="Rebooting Liberté Linux (\$progress%)"
SPLASH_SHUTDOWN_MESSAGE="Shutting down Liberté Linux (\$progress%)"

# Drop to verbose mode on initscript errors
SPLASH_VERBOSE_ON_ERRORS="yes"

# Do not override fadein/fadeout in kernel parameters
SPLASH_EFFECTS=""

# In the silent mode, don't show textbox even if the theme supports it
SPLASH_TEXTBOX="no"

# Silent mode timeout in seconds, if positive
SPLASH_AUTOVERBOSE="900"

# Name of the boot service starting X.
# Set if the tty is wrong after boot.
# SPLASH_XSERVICE="xdm"
