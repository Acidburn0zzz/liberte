# $Header: $

description="Starts I2P service."

pidfile=/var/run/i2p.pid

# cf. wrapper.jvm_exit.timeout
timeout=65

wrapper=/usr/bin/wrapper
wrapper_cfg=/opt/i2p/wrapper.config


depend() {
	need net
}

start() {
	ebegin "Starting I2P"
	checkpath -q -d -m 750 -o i2p:i2p /var/run/i2p
	start-stop-daemon -S -q -u i2p -p ${pidfile} -bm -x ${wrapper} -- \
		${wrapper_cfg} wrapper.daemonize=FALSE
	eend $?
}

stop() {
	ebegin "Stopping I2P"
	start-stop-daemon -K -q -u i2p -p ${pidfile} -R ${timeout}
	eend $?
}
