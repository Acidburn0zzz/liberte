#!/bin/sh

choice=
if [ -e ${TMPDIR}/logout-choice ]; then
    choice=`cat ${TMPDIR}/logout-choice`
    rm ${TMPDIR}/logout-choice
fi


ret=0

case "${choice}" in
shutdown)
    sudo -n shutdown -h now
    sleep 5
    ;;
reboot)
    sudo -n shutdown -r now
    sleep 5
    ;;
login)
    ret=1
    ;;
logout|"")
    echo 'Press Ctrl-D to login to X again.'
    ;;
*)
    echo "Unexpected logout choice: [${choice}]"
    ;;
esac


exit ${ret}
