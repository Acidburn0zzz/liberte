#!/bin/sh

clear
cat <<EOF
You have logged out of X.
EOF

ret=0
done=0
while [ ${done} = 0 ]; do
    cat <<EOF

Please choose:
    [s] shutdown
    [r] reboot
    [x] login to X again
    [q] shell (or just hit enter)
EOF
    read choice
    done=1

    case "${choice}" in
    s)
        sudo shutdown -h now
        sleep 5
        ;;
    r)
        sudo shutdown -r now
        sleep 5
        ;;
    x)
        ret=1
        ;;
    q|"")
        echo 'Press Ctrl-D to login to X again.'
        ;;
    *)
        done=0
        ;;
    esac
done

exit ${ret}
