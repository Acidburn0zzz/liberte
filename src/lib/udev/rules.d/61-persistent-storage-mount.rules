# On-demand autofs entries for removable filesystems
ENV{ID_FS_USAGE}=="filesystem|crypto", KERNEL!="loop[0-9]*", RUN+="/root/bin/ps-mount"
ACTION=="change", SUBSYSTEM=="block",  KERNEL!="loop[0-9]*", RUN+="/root/bin/ps-mount"

# Permanent autofs entries for floppies and IDE cdroms
ACTION=="add", KERNEL=="fd[0-9]",                      RUN+="/root/bin/ps-mount"
ACTION=="add", ENV{ID_CDROM}=="1", ENV{ID_BUS}=="ata", RUN+="/root/bin/ps-mount"
